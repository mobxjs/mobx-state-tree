        "*.{ts,tsx,js,jsx}": [
            "prettier --write --print-width 100 --tab-width 4 --no-semi",
            "git add"
        ]
    },
    "devDependencies": {
        "cross-env": "^5.1.1",
        "husky": "^1.0.0",
        "lerna": "^3.3.0",
        "lint-staged": "^8.0.0",
        "prettier": "^1.13.6",
        "tslint": "^5.0.0",
        "tslint-config-prettier": "^1.14.0",
        "typescript": "^3.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
